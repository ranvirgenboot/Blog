<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

<nav class="navbar">
  <div class="navbar-brand">
   <h3> Article City</h3>
  </div>
  <div class="navbar-menu">
    <% if user_signed_in? %>
      <%= link_to "Sign Out", destroy_user_session_path, data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      }, style: "color: black;" %>
      <%= link_to "Articles", articles_path, style: "color: black;" %>
      <%= link_to "New Article", new_article_path, style: "color: black;" %>
      <%= link_to "My Article", my_article_path, style: "color: black;"%>
    <% else %>
      <%= link_to "Sign In", new_user_session_path, style: "color: black;" %>
      <%= link_to "Sign Up", new_user_registration_path, style: "color: black;" %>

    <% end %>
  </div> 
</nav>
 <%= yield %>
    </body>
</html>



